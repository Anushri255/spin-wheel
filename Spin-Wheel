<!DOCTYPE html>
<html lang="en">
<head>
    <title>Spinning Wheel</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
        }

        #wheel {
            width: 300px;
            height: 300px;
            border-radius: 50%;
            border: 5px solid #333;
            position: relative;
            overflow: hidden;
        }

        .slice {
            position: absolute;
            width: 50%;
            height: 100%;
            transform-origin: 100% 50%;
            clip-path: polygon(0% 0%, 100% 50%, 0% 100%);
        }

        .slice span {
            display: block;
            position: absolute;
            top: 50%;
            left: 100%;
            transform-origin: 0% 0%;
            transform: translateX(-50%) rotate(-90deg);
            white-space: nowrap;
            font-weight: bold;
        }

        #arrow {
            width: 0; 
            height: 0; 
            border-left: 20px solid transparent;
            border-right: 20px solid transparent;
            border-bottom: 30px solid #333;
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
        }

        .controls {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }

        input, button {
            padding: 10px;
            font-size: 16px;
        }

        #names {
            margin-top: 20px;
        }
    </style>

<script>
    const wheel = document.getElementById('wheel');
    const namesDiv = document.getElementById('names');
    let names = [];
    const colors = ['#f1c40f', '#e67e22', '#e74c3c', '#9b59b6', '#3498db', '#1abc9c', '#2ecc71', '#34495e'];

    function addName() {
        const nameInput = document.getElementById('nameInput');
        const name = nameInput.value.trim();
        if (name && !names.includes(name)) {
            names.push(name);
            nameInput.value = '';
            updateWheel();
            updateNames();
        }
    }

    function removeName() {
        const nameInput = document.getElementById('nameInput');
        const name = nameInput.value.trim();
        const index = names.indexOf(name);
        if (index > -1) {
            names.splice(index, 1);
            nameInput.value = '';
            updateWheel();
            updateNames();
        }
    }

    function updateWheel() {
        wheel.innerHTML = '<div id="arrow"></div>';
        const sliceDeg = 360 / names.length;
        names.forEach((name, i) => {
            const slice = document.createElement('div');
            slice.className = 'slice';
            slice.style.backgroundColor = colors[i % colors.length];
            slice.style.transform = `rotate(${i * sliceDeg}deg)`;
            slice.innerHTML = `<span style="transform: rotate(${sliceDeg / 2}deg)">${name}</span>`;
            wheel.appendChild(slice);
        });
    }

    function updateNames() {
        namesDiv.innerHTML = '';
        names.forEach(name => {
            const nameSpan = document.createElement('span');
            nameSpan.textContent = name;
            namesDiv.appendChild(nameSpan);
        });
    }

    function spin() {
        const sliceDeg = 360 / names.length;
        const randomSlice = Math.floor(Math.random() * names.length);
        const rotateDeg = randomSlice * sliceDeg + 3600 + sliceDeg / 2;
        wheel.style.transition = 'transform 4s ease-out';
        wheel.style.transform = `rotate(${rotateDeg}deg)`;

        setTimeout(() => {
            alert(`Selected: ${names[randomSlice]}`);
        }, 4000);
    }
</script>
</head>
<body>
    <div id="wheel">
        <div id="arrow"></div>
    </div>
    <div class="controls">
        <input type="text" id="nameInput" placeholder="Enter a name">
        <button onclick="addName()">Add Name</button>
        <button onclick="removeName()">Remove Name</button>
        <button onclick="spin()">Spin</button>
    </div>
    <div id="names"></div>

</body>
</html>
